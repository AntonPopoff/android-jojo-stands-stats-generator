<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:title="Edit" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.AppCompat.EditDiagramStatisticNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Potential" />

            <com.antonpopoff.standcharacteristicsgenerator.views.CharacteristicRatingBar
                style="@style/EditDiagramStatisticRatingBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                style="@style/EditDiagramDivider"
                android:layout_width="match_parent"
                android:layout_height="1px" />

            <TextView
                style="@style/TextAppearance.AppCompat.EditDiagramStatisticNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Power" />

            <com.antonpopoff.standcharacteristicsgenerator.views.CharacteristicRatingBar
                style="@style/EditDiagramStatisticRatingBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                style="@style/EditDiagramDivider"
                android:layout_width="match_parent"
                android:layout_height="1px" />

            <TextView
                style="@style/TextAppearance.AppCompat.EditDiagramStatisticNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speed" />

            <com.antonpopoff.standcharacteristicsgenerator.views.CharacteristicRatingBar
                style="@style/EditDiagramStatisticRatingBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                style="@style/EditDiagramDivider"
                android:layout_width="match_parent"
                android:layout_height="1px" />

            <TextView
                style="@style/TextAppearance.AppCompat.EditDiagramStatisticNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Range" />

            <com.antonpopoff.standcharacteristicsgenerator.views.CharacteristicRatingBar
                style="@style/EditDiagramStatisticRatingBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                style="@style/EditDiagramDivider"
                android:layout_width="match_parent"
                android:layout_height="1px" />

            <TextView
                style="@style/TextAppearance.AppCompat.EditDiagramStatisticNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Durability" />

            <com.antonpopoff.standcharacteristicsgenerator.views.CharacteristicRatingBar
                style="@style/EditDiagramStatisticRatingBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                style="@style/EditDiagramDivider"
                android:layout_width="match_parent"
                android:layout_height="1px" />

            <TextView
                style="@style/TextAppearance.AppCompat.EditDiagramStatisticNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precision" />

            <com.antonpopoff.standcharacteristicsgenerator.views.CharacteristicRatingBar
                style="@style/EditDiagramStatisticRatingBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                style="@style/EditDiagramDivider"
                android:layout_width="match_parent"
                android:layout_height="1px" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
