<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/Toolbar.Base.Default</item>
    </style>

    <style name="AppTheme.Base.Default" />

    <style name="Toolbar.Base" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="Toolbar.Base.Default" />

    <style name="Base.Theme.AppCompat.Light.Dialog.Default">
        <item name="android:backgroundDimAmount">@dimen/statistics_dialog_dim_amount</item>
    </style>

    <style name="Base.Theme.AppCompat.Light.Dialog.Default.Statistics">
        <item name="android:windowBackground">@drawable/statistics_dialog_background</item>
        <item name="android:windowAnimationStyle">@style/StatisticsDialogAnimationStyle</item>
    </style>

    <style name="StatisticsDialogAnimationStyle">
        <item name="android:windowEnterAnimation">@anim/statistics_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/statistics_dialog_out</item>
    </style>

    <style name="StatsRatingBarDefaultStyle">
        <item name="rb_barHeight">4dp</item>
        <item name="rb_thumbRadius">7.5dp</item>
        <item name="rb_notchRadius">4dp</item>
        <item name="rb_textSize">22sp</item>
        <item name="rb_textOffset">6dp</item>
        <item name="rb_barColor">#F1B8B8</item>
        <item name="rb_selectedBarColor">#EA7371</item>
    </style>

</resources>
